@model List<DoctorViewModel>
@{
    ViewData["Title"] = "Home Page";
}
    <a asp-controller="Home" asp-action="Add" class="btn btn-dark">  Add Doctor</a>
        <form asp-controller="Home" asp-action="Index">
            <input type="text" name="FilterString" />
            <button type="submit" class="btn btn-danger">Filter</button>
        </form>

        <div class="text-center">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">
                            ID
                        </th>
                        <th scope="col">
                            First Name
                        </th>
                        <th scope="col">
                            Last Name
                        </th>
                        <th scope="col">
                            Phone Number
                        </th>
                        <th scope="col">
                          Prescriptions
                        </th>
                        <th scope="col">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in Model)
                    {
                    <tr>
                        <th scope="row">
                            @doctor.Id
                        </th>
                        <td>@doctor.FirstName</td>
                        <td>@doctor.LastName</td>
                        <td>@doctor.PhoneNumber</td>
                        <td>@doctor.Prescriptions</td>
                        <td>
                        <td>
                            <a asp-area="" asp-controller="Home" asp-action="View" asp-route-doctorId="@doctor.Id">View</a>
                            |
                            <a asp-area="" asp-controller="Home" asp-action="Delete" asp-route-doctorId="@doctor.Id">Delete</a>
                        </td>

                    </tr>
                    }

                </tbody>

            </table>
        </div>
