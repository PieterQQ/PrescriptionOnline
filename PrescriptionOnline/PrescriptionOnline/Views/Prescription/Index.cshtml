@model DoctorViewModel
@{
    ViewData["Title"] = "Prescription Page";
}
<a asp-controller="Prescription" asp-action="Add" class="btn btn-dark">  Add Prescription</a>
<div>
    Doctor's Data:<br />
    ID: @Model.Id <br />
    First Name: @Model.FirstName<br />
    Last Name : @Model.LastName<br />
    PhoneNumber: @Model.PhoneNumber <br />
    Prescription : @Model.IsAbleToMakePrescriptions
</div>
<form asp-controller="Prescription" asp-action="Index">
    <input type="text" name="FilterString" />
    <button type="submit" class="btn btn-danger">Filter</button>
</form>
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    ID
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    CreatedAt
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prescription in Model.Prescriptions)
            {
            <tr>
                <th scope="row">
                    @prescription.Id
                </th>
                <td>@prescription.Name</td>
                <td>@prescription.CreatedAt</td>
                <td>
                    <a asp-area="" asp-controller="Prescription" asp-action="View" asp-route-prescriptionId="@prescription.Id">View</a>
                    |
                    <a asp-area="" asp-controller="Prescription" asp-action="Delete" asp-route-prescriptionId="@prescription.Id">Delete</a>
                </td>
            </tr>
            }

        </tbody>

    </table>
</div>