@model PrescriptionViewModel
@{
    ViewData["Title"] = "Medicine Page";
}
    <a asp-controller="Medicine" asp-action="Add" class="btn btn-dark">  Add Medicine</a>
    <div>
        Prescription's Name: <br />
        ID: @Model.Id <br />
        Name: @Model.Name <br />
        CreatedAt: @Model.CreatedAt <br />
    </div>
<form asp-controller="Medicine" asp-action="Index">
    <input type="text" name="FilterString" />
    <button type="submit" class="btn btn-danger">Filter</button>
</form>
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    ID
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Producent
                </th>
                <th scope="col">
                    ActiveSubstance
                </th>
                <th scope="col">
                    Expiration Date
                </th>
                <th scope="col">
                    Weight
                </th>
                <th scope="col">
                    Price
                </th>
                <th scope="col">
                    Amount
                </th>
                <th scope="col">
                    PriceInTotal
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medicine in Model.Medicines)
            {
            <tr>
                <th scope="row">
                    @medicine.Id
                </th>
                <td>@medicine.Name</td>
                <td>@medicine.Producent</td>
                <td>@medicine.ActiveSubstance</td>
                <td>@medicine.ExpirationDate</td>
                <td>@medicine.Weight</td>
                <td>@medicine.Price</td>
                <td>@medicine.Amount</td>
                <td>@medicine.PriceInTotal</td>
                <td><a asp-area="" asp-controller="Medicine" asp-action="Delete" asp-route-medicineId="@medicine.Id">Delete</a> </td>
            </tr>
            }

        </tbody>

    </table>
</div>
