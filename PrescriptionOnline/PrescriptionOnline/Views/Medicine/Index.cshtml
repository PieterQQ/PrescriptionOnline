@model PrescriptionViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div>
    Prescription's Name: @Model.Name
</div>
<form asp-controller="Medicine" asp-action="Index">
    <input type="text" name="FilterString" />
    <button type="submit" class="btn btn-danger">Filter</button>
</form>
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medicine in Model.Medicines)
            {
                <tr>
                    <th scope="row">
                        @(Model.Medicines.IndexOf(medicine) + 1)
                    </th>
                    <td>@medicine.Name</td>
                    <td><a asp-area="" asp-controller="Medicine" asp-action="Delete" asp-route-indexOfMediciner="@Model.Medicines.IndexOf(medicine)">Delete</a> </td>
                </tr>
            }

        </tbody>

    </table>
</div>
